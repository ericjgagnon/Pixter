<h1 class="text-center">Guitar Lovers Unite</h1>

<br/>

<% if flash[:notice] %>
	<div class ="launch-box">
		<%= flash.now[:notice].html_safe %>
	</div>
<% end %>

<% @posts.each do |post| %>
	<div class="launch-box span3 text-center">
		<h1><%= post.title %></h1>

		<% if post.image.present? %>
			<%= image_tag post.image %>
		<% end %>

		<h2><%= post.description %></h2>

		<%= link_to 'Delete', post, :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-info' %>

		<%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-info' %>

	</div>
<% end %>